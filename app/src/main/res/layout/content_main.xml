<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listReminders"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:theme="@style/appTheme" />
    </LinearLayout>

    <Switch
        android:id="@+id/switchFavourite"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingTop="90sp"
        android:text="Show favourites"
        android:textAlignment="inherit"
        android:textColorLink="@color/fragmentColor"
        android:textStyle="bold"></Switch>
    <Switch
        android:id="@+id/switchCompleted"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:text="Show completed"
        android:textAlignment="inherit"
        android:textColorLink="@color/fragmentColor"
        android:textStyle="bold"></Switch>
</LinearLayout>